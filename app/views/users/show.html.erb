<div class="sign_up-login-form card m-4 p-4">
  <% if @user.image.present? %>
    <p><%= image_tag(@user.image.url, width: "100", height: "100", class: "rounded-circle") %></p>
  <% end %>
  <h4>お名前：<%= @user.name %></h4>
  <h4>メールアドレス：<%= @user.email %></h4>
  <h4>一言コメント：<%= @user.comment %></h4>
  <br>
  <%= link_to "投稿一覧を見てみる", pictures_path, class: "btn btn-primary" %>
  <br>
  <% if current_user.id == @user.id %>
    <%= link_to "プロフィールを編集する", edit_user_path(@user), class: "btn btn-warning" %>
    <br>
    <%= link_to "アカウントを削除する", user_path(@user), class: "btn btn-danger", method: :delete, data: { confirm: "本当に削除してもよろしいですか？" } %>
  <% end %>
</div>