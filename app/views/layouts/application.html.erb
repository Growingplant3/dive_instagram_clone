<!DOCTYPE html>
<html>
  <head>
    <title>DiveInstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="#">○nstagram</a>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <div class="ml-auto">
        <% if logged_in? %>
          <%= link_to "プロフィールを確認する", user_path(current_user), class: "btn btn-info"%>
          <%= link_to "ログアウトする", session_path(current_user), method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "サインアップする", new_user_path, class: "btn btn-success" %>
          <%= link_to "ログインする", new_session_path, class: "btn btn-info" %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
