<div class="sign_up-login-form card m-4 p-4">
  <h1>投稿コメント/画像を確認中</h1>
  <% if @picture.image.present? %>
    <%= image_tag "#{@picture.image.url}", width: "200", height: "200" %>
  <% else %>
    <%= image_tag "no_image.jpg", width: "200", height: "200" %>
  <% end %>
  <hr class="my-4">
  <p>コメント：<%= "#{@picture.content}" %></p>
  <% if @favorite.present? %>
    <%= button_to "お気に入りを解除する", favorite_path(@favorite), method: :delete, class: "btn btn-danger" %>
  <% else %>
    <%= link_to "お気に入りに登録する", favorites_path(picture_id: @picture), { method: "post", class: "btn btn-success" } %>
  <% end %>
  <br>
  <%= link_to "一覧表示へ戻る", pictures_path, class: "btn btn-primary" %>
  <br>
  <% if current_user.id == @picture.user.id %>
    <%= link_to "投稿を編集する", edit_picture_path(@picture), class: "btn btn-dark" %>
    <br>
    <%= button_to "投稿を削除する", picture_path(@picture), class: "btn btn-danger", method: :delete, data: { confirm: "本当に削除してもよろしいですか？" } %>
  <% end %>
</div>